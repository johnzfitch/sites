[global]
root = "/var/lib/sites"
caddyfile = "/etc/caddy/sites.conf"
log = "/var/lib/sites/deploy.log"

[sites.example-com]
domain = "example.com"
repo = "https://github.com/user/example.com"
branch = "main"

[sites.blog-example-com]
domain = "blog.example.com"
repo = "https://github.com/user/blog"
branch = "main"

